<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE resources PUBLIC "-//Payara.fish//DTD Payara Server 4 Resource Definitions//EN" "https://raw.githubusercontent.com/payara/Payara-Server-Documentation/master/schemas/payara-resources_1_6.dtd">
<resources>
    <jdbc-resource pool-name="postgrespool" jndi-name="jdbc/postgres" enabled="true" ></jdbc-resource>

    <jdbc-connection-pool datasource-classname="com.microsoft.sqlserver.jdbc.SQLServerDataSource"
                          name="jdbc/postgres" res-type="javax.sql.DataSource">
        <property name="User" value="postgres"></property>
        <property name="Password" value="sa"></property>
        <property name="DatabaseName" value="searchable_encryption_db"></property>
        <property name="ServerName" value="jdbc:postgresql://localhost:5432"></property>
        <property name="PortNumber" value="5432"></property>
    </jdbc-connection-pool>
</resources>